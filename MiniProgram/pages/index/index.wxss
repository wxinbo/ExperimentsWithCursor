/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  padding: 20px;
}
.calendar {
  display: flex;
  flex-wrap: wrap;
  margin-top: 0px;
}
.week-break {
  width: 100%;
  height: 0; /* 用于换行 */
}
.weekdays {
  display: flex; /* 使用 flexbox 布局 */
  justify-content: space-between; /* 使每个星期几均匀分布 */
  margin-top: 0px; /* 减小上边距 */
  flex-wrap: nowrap; /* 不换行 */
}

.weekday {
  width: 40px; /* 设置为 1/7 的宽度 */
  height: 40px; /* 固定高度 */
  line-height: 40px; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  border-radius: 50%; /* 圆形 */
  border: 1px solid #ccc; /* 边框 */
  margin: 5px; /* 间距 */
  background-color: #f0f0f0; /* 背景颜色 */
  display: flex; /* 使用 flexbox 使内容居中 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.day {
  width: 40px; /* 设置为 1/7 的宽度 */
  height: 40px; /* 固定高度 */
  line-height: 40px; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  border-radius: 50%; /* 圆形 */
  border: 1px solid #ccc; /* 边框 */
  margin: 5px; /* 减小间距 */
  cursor: pointer; /* 鼠标指针 */
  display: inline-block; /* 使其在一行内显示 */
}


.selected {
  background-color:rgb(0, 123, 255);
}
.input {
  margin-top: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
}
.add-button {
  margin-top: 10px;
  background-color: #007aff;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
.add-button:hover {
  background-color: #005bb5;
}
.marks {
  margin-top: 20px;
}
.header {
  display: flex;
  flex-direction: column; /* 垂直排列 */
  margin-bottom: 20px;
}
.current-date {
  font-size: 18px;
  /*font-weight: bold;*/
}
.total-days {
  font-size: 16px;
  color: #555;
}
.clear {
  width: 100%; /* 使换行占据整行 */
  height: 0; /* 不占用高度 */
}
.transparent {
  background-color: transparent; /* 设置背景为透明 */
  border: 1px solid transparent; /* 使用虚线边框以区分 */
}
.spacer {
  height: 10px; /* 设置空行的高度 */
}
