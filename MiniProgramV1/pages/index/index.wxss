/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.calendar {
  display: flex;
  flex-wrap: wrap;
  margin-top: 0px;
}

.day {
  width: 40px; /* 圆形的直径 */
  height: 40px; /* 圆形的直径 */
  line-height: 40px; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  border-radius: 50%; /* 圆形 */
  border: 1px solid #ccc; /* 边框 */
  margin: 5px; /* 减小间距 */
  cursor: pointer; /* 鼠标指针 */
  display: inline-block; /* 使其在一行内显示 */
}

.week-break {
  width: 100%;
  height: 0; /* 用于换行 */
}

.weekdays {
  display: flex;
  margin-top: 0px; /* 减小上边距 */
  flex-wrap: wrap;
}

.weekday {
  width: 40px; /* 圆形的直径 */
  height: 40px; /* 圆形的直径 */
  line-height: 40px; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  border-radius: 50%; /* 圆形 */
  border: 1px solid #ccc; /* 边框 */
  margin: 5px; /* 间距 */
  background-color: #f0f0f0; /* 背景颜色 */
  display: inline-block; /* 使其在一行内显示 */
}
